<Window x:Class="IldssUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intelligent Legal Document Storage System" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnIndex" Content="Index" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Click="btnIndex_Click"/>
        <Button x:Name="btnMonitor" Content="Monitor" HorizontalAlignment="Left" Height="30" Margin="10,45,0,0" VerticalAlignment="Top" Width="90" Click="btnMonitor_Click"/>
        <Button x:Name="btnEmptyDb" Content="Empty DB" HorizontalAlignment="Left" Height="30" Margin="10,80,0,0" VerticalAlignment="Top" Width="90" Click="btnEmptyDb_Click"/>
        <Button x:Name="btnIncremental" Content="Incr Backup" HorizontalAlignment="Left" Height="30" Margin="10,115,0,0" VerticalAlignment="Top" Width="90" Click="btnIncremental_Click"/>
        <Button x:Name="btnFullBackup" Content="Full Backup" HorizontalAlignment="Left" Height="30" Margin="10,150,0,0" VerticalAlignment="Top" Width="90" Click="btnFullBackup_Click"/>

    </Grid>
    
</Window>
